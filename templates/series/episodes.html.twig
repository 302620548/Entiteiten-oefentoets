{% extends 'base.html.twig' %}

{% block title %}Hello SeriesController!{% endblock %}

{% block body %}
    <div class="container">
        <h3>Series:</h3>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID:</th>
                <th scope="col">Title:</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.id }}</td>
                    <td>{{ episode.title }}</td>
                    <td><a href="episodes/{{ episode.id }}" class="btn btn-warning">Go</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
